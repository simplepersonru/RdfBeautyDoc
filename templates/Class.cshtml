            </div>
        }

        <!-- –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ (–≥–¥–µ —ç—Ç–æ—Ç –∫–ª–∞—Å—Å –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –∫–∞–∫ range) -->
        @{
            var usedInProperties = Model.AllProperties
            .Where(p => p.Range.Id == Model.Class.Id)
            .ToList();
        }

        @if (usedInProperties.Any())
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">–°—Å—ã–ª–∫–∏ (@usedInProperties.Count)</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>–ö–ª–∞—Å—Å</th>
                                    <th>–°–≤–æ–π—Å—Ç–≤–æ</th>
                                    <th>–ü–æ–¥–ø–∏—Å—å</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var prop in usedInProperties)
                                {
                                    <tr class="searchable">
                                        <td>
                                            <a href="/@prop.Domain.Href" class="badge badge-class text-decoration-none">
                                                @prop.Domain.NamespacedId
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/@prop.Href" class="badge badge-property text-decoration-none">
                                                @prop.NamespacedId
                                            </a>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(prop.Label))
                                            {
                                                <p>@prop.Label</p>
                                            }
                                            else
                                            {
                                                <p>‚Äî</p>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        @if (Model.ChildClasses.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">–î–æ—á–µ—Ä–Ω–∏–µ –∫–ª–∞—Å—Å—ã (@Model.ChildClasses.Count)</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>–ö–ª–∞—Å—Å</th>
                                    <th>–ü–æ–¥–ø–∏—Å—å</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cls in Model.ChildClasses)
                                {
