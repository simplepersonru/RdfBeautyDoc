@using RdfsBeautyDoc
<!-- templates/Class.cshtml -->
@model ClassViewModel
@{
    Layout = "templates/_Layout.cshtml";
}

<h1>@Model.Class.Id</h1>
<p class="lead">@Model.Class.Label</p>

@if (!string.IsNullOrEmpty(Model.Class.Comment))
{
    <div class="alert alert-info">
        @Model.Class.Comment
    </div>
}

<!-- Диаграмма -->
@if (!string.IsNullOrEmpty(Model.Class.SvgDiagram))
{
    <div class="mb-4">
        @Html.Raw(Model.Class.SvgDiagram)
    </div>
}

<div class="row">
    <div class="col-md-8">
        <!-- Свойства -->
        @if (Model.Properties.Any())
        {
            <h3>Properties</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prop in Model.Properties)
                    {
                        <tr>
                            <td>
                                <a href="/properties/@(prop.Id).html">@prop.Id</a>
                            </td>
                            <td>
                                @if (Model.AllClasses.FirstOrDefault(c => c.Id == prop.Range) != null)
                                {
                                    <a href="/classes/@(prop.Range).html">@prop.Range</a>
                                }
                                else
                                {
                                    <code>@prop.Range</code>
                                }
                            </td>
                            <td>@prop.Label</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <div class="col-md-4">
        <!-- Навигация -->
        <div class="card">
            <div class="card-header">
                Navigation
            </div>
            <div class="card-body">
                <div class="list-group">
                    @foreach (var other in Model.AllClasses.Take(10))
                    {
                        <a href="/classes/@(other.Id).html"
                           class="list-group-item list-group-item-action @(other.Id == Model.Class.Id ? "active" : "")">
                            @other.Id
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>