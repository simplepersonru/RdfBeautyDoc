</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const elem = document.querySelector('.diagram-content');
        const parent = document.querySelector('.diagram-viewport');

        // –û–±–µ—Ä–Ω–µ–º SVG –≤ div –¥–ª—è –ª—É—á—à–µ–≥–æ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è
        if (elem.querySelector('svg')) {
            elem.querySelector('svg').style.display = 'block';
        }

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º panzoom
        panzoom(elem, {
            bounds: false,
            boundsPadding: 0.1,
            maxZoom: 50,
            minZoom: 0.01,
            zoomSpeed: 0.1,
            initialZoom: 0.45,
            initialX: 0,
            initialY: 0,
            contain: 'outside',
            smoothScroll: false
        });
    });
</script>

@functions {
    HtmlString GetStereotypeBadge(Stereotype stereotype)
    {
        var displayText = stereotype switch
        {
            Stereotype.Class => "Class",
            Stereotype.Enum => "Enum",
            Stereotype.Primitive => "Primitive",
            Stereotype.DataType => "Data Type",
            _ => stereotype.ToString().ToUpper()
        };

        return new HtmlString($"<span class=\"badge {Class.BadgeClassStatic(stereotype)}\">{displayText}</span>");
    }
}