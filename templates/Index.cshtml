@using RdfsBeautyDoc
@model IndexViewModel
@{
    Layout = "_Layout.cshtml";
}

<div class="text-center mb-5">
    <h1 class="display-4">RDFS Documentation</h1>
    <p class="lead">Interactive documentation for your RDF Schema</p>
</div>

<!-- Быстрая статистика -->
<div class="row mb-4">
    <div class="col-md-2 col-6 mb-3">
        <div class="card text-white bg-primary">
            <div class="card-body text-center py-3">
                <h3 class="card-title mb-1">@Model.ClassCount</h3>
                <p class="card-text mb-0">Classes</p>
                <a href="/classes/_index.html" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
        <div class="card text-white bg-success">
            <div class="card-body text-center py-3">
                <h3 class="card-title mb-1">@Model.PropertyCount</h3>
                <p class="card-text mb-0">Properties</p>
                <a href="/properties/_index.html" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
        <div class="card text-white bg-purple" style="background-color: #6f42c1;">
            <div class="card-body text-center py-3">
                <h3 class="card-title mb-1">@Model.EnumCount</h3>
                <p class="card-text mb-0">Enums</p>
                <a href="/enums/_index.html" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
        <div class="card text-white bg-warning">
            <div class="card-body text-center py-3">
                <h3 class="card-title mb-1">@Model.PrimitiveCount</h3>
                <p class="card-text mb-0">Primitives</p>
                <a href="/primitives/_index.html" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
        <div class="card text-white bg-info">
            <div class="card-body text-center py-3">
                <h3 class="card-title mb-1">@Model.DataTypeCount</h3>
                <p class="card-text mb-0">Data Types</p>
                <a href="/datatypes/_index.html" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
        <div class="card bg-light">
            <div class="card-body text-center py-3">
                <h3 class="card-title mb-1 text-dark">@(Model.ClassCount + Model.PropertyCount + Model.EnumCount + Model.PrimitiveCount + Model.DataTypeCount)</h3>
                <p class="card-text mb-0 text-dark">Total</p>
            </div>
        </div>
    </div>
</div>

<!-- Недавние классы и свойства -->
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Classes</h5>
                <a href="/classes/_index.html" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    @foreach (var cls in Model.RecentClasses)
                    {
                        <a href="/@(cls.StereoPath)/@(cls.Id).html" class="list-group-item list-group-item-action py-3 searchable">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">@cls.Id</h6>
                                    <small class="text-muted">@cls.Label</small>
                                </div>
                                <span class="badge bg-primary rounded-pill">@cls.Properties.Count</span>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Properties</h5>
                <a href="/properties/_index.html" class="btn btn-sm btn-outline-success">View All</a>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    @foreach (var prop in Model.RecentProperties)
                    {
                        <a href="/properties/@(prop.Id).html" class="list-group-item list-group-item-action py-3 searchable">
                            <div class="d-flex w-100 justify-content-between">
                                <div>
                                    <h6 class="mb-1">@prop.Id</h6>
                                    <small class="text-muted">@prop.Label</small>
                                </div>
                                <div class="text-end">
                                    <div class="small">@prop.Domain.Id → @prop.Range</div>
                                    @if (!string.IsNullOrEmpty(prop.Multiplicity))
                                    {
                                        <span class="badge bg-info">@prop.Multiplicity</span>
                                    }
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Быстрые ссылки -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Quick Navigation</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="card bg-light border">
                            <div class="card-body text-center">
                                <div class="mb-2" style="font-size: 2rem;">📦</div>
                                <h5>Classes</h5>
                                <p class="text-muted">Object types with properties</p>
                                <a href="/classes/_index.html" class="btn btn-primary">Browse Classes</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light border">
                            <div class="card-body text-center">
                                <div class="mb-2" style="font-size: 2rem;">🔗</div>
                                <h5>Properties</h5>
                                <p class="text-muted">Attributes and relationships</p>
                                <a href="/properties/_index.html" class="btn btn-success">Browse Properties</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light border">
                            <div class="card-body text-center">
                                <div class="mb-2" style="font-size: 2rem;">📝</div>
                                <h5>Enums & Types</h5>
                                <p class="text-muted">Value types and enumerations</p>
                                <div class="btn-group">
                                    <a href="/enums/_index.html" class="btn btn-outline-purple">Enums</a>
                                    <a href="/primitives/_index.html" class="btn btn-outline-warning">Primitives</a>
                                    <a href="/datatypes/_index.html" class="btn btn-outline-info">Data Types</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-purple {
        background-color: #6f42c1 !important;
    }

    .btn-outline-purple {
        color: #6f42c1;
        border-color: #6f42c1;
    }

        .btn-outline-purple:hover {
            background-color: #6f42c1;
            color: white;
        }
</style>