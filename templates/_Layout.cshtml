@using RdfsBeautyDoc
@model LayoutViewModel
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/site.css" rel="stylesheet">
    <script src='https://unpkg.com/panzoom@9.4.0/dist/panzoom.min.js'></script>
</head>
<body>
    <!-- Навигация -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/index.html">
                📚 RdfsBeautyDoc
            </a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(Model.CurrentPage == "home" ? "active" : "")"
                           href="/index.html">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(Model.CurrentPage == "entities" ? "active" : "")"
                           href="/entities.html">
                            Entities (@Model.EnitityCount)
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(Model.CurrentPage == "properties" ? "active" : "")"
                           href="/properties/_index.html">
                            Properties (@Model.PropertyCount)
                        </a>
                    </li>
                </ul>

                <!-- Поиск -->
                <div class="position-relative mx-3 flex-grow-1">
                    <!-- Контейнер в 2 раза шире, центрированный -->
                    <div class="position-relative" style="width: 100%;">
                        <input type="search" class="form-control"
                               id="searchInput" placeholder="Search..."
                               autocomplete="off">
                        <div id="searchResults"
                             class="list-group d-none position-absolute top-100 start-0 end-0 mt-1 shadow-lg rounded"
                             style="z-index: 1050;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Хлебные крошки -->
    @if (Model.Breadcrumbs?.Any() == true)
    {
        <nav class="bg-light py-2">
            <div class="container">
                <ol class="breadcrumb mb-0">
                    @foreach (var item in Model.Breadcrumbs)
                    {
                        <li class="breadcrumb-item">
                            <a href="@item.Url">@item.Name</a>
                        </li>
                    }
                </ol>
            </div>
        </nav>
    }

    <!-- Основное содержимое -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- Футер -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h5>RDFS Documentation</h5>
                    <p class="mb-0">Generated from RDF/XML schema</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Скрипты -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/search.js"></script>
</body>
</html>